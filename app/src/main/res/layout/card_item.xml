<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="21dp">

        <LinearLayout
            android:id="@+id/cakeLL"
            android:layout_width="227dp"
            android:layout_height="94dp"
            android:padding="10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="18dp"
                >
                <ImageView
                    android:id="@+id/curveCakeIV"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/curvecake"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/cakeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="foodNmae"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textSize="15sp"
                    android:textColor="@color/exDarkGray"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textAlignment="textStart"/>
               <ImageView
                   android:id="@+id/rateIV"
                   android:layout_width="90.1dp"
                   android:layout_height="14.2dp"
                   android:layout_gravity="start"
                   android:layout_marginStart="4dp"
                   android:layout_marginTop="4dp"
                   android:src="@drawable/fourstar"
                   />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>