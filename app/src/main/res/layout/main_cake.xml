<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:outlineSpotShadowColor="@color/exDarkGray"
        app:cardCornerRadius="23dp">

        <LinearLayout
            android:id="@+id/shopCakeLLayout"
            android:layout_width="259dp"
            android:layout_height="362dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/shopCakeIV"
                android:layout_width="259dp"
                android:layout_height="219dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:src="@drawable/nycaketwo"/>
            <TextView
                android:id="@+id/shopCakeTitleBTN"
                android:layout_width="210dp"
                android:layout_height="58dp"
                android:text="Strawberry Shortcake"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:background="@color/transparent"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <RatingBar
                    android:id="@+id/shopRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.5"
                    android:scaleY="0.5"


                    />
                <TextView
                    android:id="@+id/shopCakeCostTV"
                    android:layout_width="64dp"
                    android:layout_height="36dp"
                    android:textSize="30sp"
                    android:textColor="@color/background"
                    android:text="$20"
                    android:layout_marginEnd="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>